@model IEnumerable<ColorListItemVM>
@{
    ViewData["Title"] = "Index";
}


<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Slider</h6>
        <a asp-action="Create" class="btn btn-outline-success">Create</a>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>View</th>
                        <th colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null || Model.Count()!=0)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td style="background-color:#@item.Hexcode"></td>
                                <td class="d-flex justify-content-around">
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-info">Update</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">No Data !</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>



